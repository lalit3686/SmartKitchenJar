<resources>

    <style name="App.MyTheme" parent="Base.App.Theme"></style>

    <style name="Base.App.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- back arrow, search icon, overflow menu color -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Theme.Activity.NoTitle.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <!-- back arrow, search icon, overflow menu color -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
